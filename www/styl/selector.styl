&
    position absolute
    z-index 999
    top 0px
    right 0px
    padding 0px
    margin 0px
    border 1px solid #eee
    background #f8f8f8
    border-bottom-left-radius 8px
    border-top 0px none
    border-right 0px none
    ul
        padding 0px
        margin 0px
        li
            float left
            position relative
            list-style-type none
            margin 0px
            padding 0px 10px
            width 90px
            height 50px
            font-size 0.8em
            padding-top 65px
            text-align center
            color #888
            .imgs
                position absolute
                opacity 0.5
                top 10px
                left 10px
                width 88px
                height 48px
                overflow hidden
                border-radius 8px
                border 1px solid #aaa

            &.active
                color #222
                .imgs
                    opacity 1
                    border-color HNBlue
                    box-shadow HNBlue 0px 0px 2px
            &:hover
                color #222
                cursor pointer
                .imgs
                    opacity 1
                    border-color HNBlue
                    box-shadow HNBlue 0px 0px 4px
            &:active
                .imgs
                    border-color HNBlue
                    box-shadow HNBlue 0px 0px 16px


            img
                position absolute
                top 0px
                left 0px
                width 88px
                height 88px
                &.desat
                    opacity 0.6
                &.graysc
                    opacity 0.5

            &:first-child
                padding-left 20px
                .imgs
                    left 20px
            &:last-child
                padding-right 20px
    div.legend
        float left
        width 100%
        height 35px
        position relative
        font-size 0.7em
        line-height 1.2em
        transition height 0.8s
        .left
            position absolute
            left 20px
        .right
            position absolute
            right 20px
            text-align right
        .size
            margin-top 4px

        .points
            position absolute
            left 20px
            top 15px
            > div
                width 29px
                height 11px
                transition all 0.8s
                position relative
                float left
                margin 0px
    div.obec
        clear left
        max-width 240px
        padding-bottom 45px
        &, *
            box-sizing border-box
        .nazev
            display block
            font-size 0.8em
            padding-left 20px
        .topeni
            position absolute
            width 100%
            padding 0px 20px
            margin-top 5px
            div
                float left
                transition width 0.2s
                height 30px
                background red
                &:hover
                    cursor help
                &:first-child
                    border-top-left-radius 3px
                    border-bottom-left-radius 3px
                &:last-child
                    border-top-right-radius 3px
                    border-bottom-right-radius 3px
            .pevna
                background #b15928
                box-shadow 0px 0px 5px #b15928
            .drevo
                background #fdbf6f
                box-shadow 0px 0px 5px #fdbf6f
            .uhli
                background #ff7f00
                box-shadow 0px 0px 5px #ff7f00
            .plyn
                background #1f78b4
                box-shadow 0px 0px 5px #1f78b4
            .elektrina
                background #e31a1c
                box-shadow 0px 0px 5px #e31a1c
            .nezjisteno
                background #888
                box-shadow 0px 0px 5px #888
